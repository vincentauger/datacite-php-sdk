# DataCite API Configuration
# Copy this file to .env and fill in your actual credentials

# API environment: public or member
DATACITE_API=public

# Base URL of the DataCite API
# Test endpoint: https://api.test.datacite.org
DATACITE_BASE_URL=https://api.datacite.org

# DataCite repository ID
DATACITE_USERNAME=your_username

# DataCite repository password
DATACITE_PASSWORD=your_password

# Mailto - optional email for User Agent header
USER_AGENT_MAILTO=youremail@domain.org

